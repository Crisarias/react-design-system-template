{
  "name": "design-system-template",
  "version": "2.0.0",
  "description": "An easy to use Design System template",
  "author": "crisarias",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:dev": "rm -rf lib && tsup --watch",
    "build:test": "env NODE_ENV=production NODE_OPTIONS=--max-old-space-size=16384 tsup",
    "build:prod": "rm -rf dist && env NODE_ENV=production NODE_OPTIONS=--max-old-space-size=16384 tsup && npm run build:post",
    "build:post": "cp ./README.md ./dist && cp -r ./src/assets ./dist && cp -r ./src/scss ./dist &&  node ./postbuild",
    "lint": "eslint --ext .js,.ts,.jsx,.tsx .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json|tsx|jsx)\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test:coverage": "vitest run ./src/ --coverage.enabled=true",
    "test:husky": "vitest run ./src/",
    "vitest": "vitest",
    "test": "vitest ./src/",
    "package": "npm pack ./dist --pack-destination ./tar",
    "publish": "npm publish ./dist"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "dayjs": "^1.11.13",
    "react": "^18.2.0",
    "react-bootstrap": "^2.10.2",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.27.0",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.3",
    "@eslint/compat": "^1.2.7",
    "@eslint/js": "^9.21.0",
    "@eslint/object-schema": "^2.1.6",
    "@npmcli/package-json": "^5.0.0",
    "@storybook/addon-docs": "^8.4.7",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-links": "^8.4.7",
    "@storybook/addon-onboarding": "^8.4.7",
    "@storybook/addon-storysource": "^8.4.7",
    "@storybook/addon-styling-webpack": "^1.0.1",
    "@storybook/blocks": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-vite": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.13.14",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "@vitest/coverage-istanbul": "^3.0.8",
    "@vitest/coverage-v8": "^3.0.8",
    "esbuild-sass-plugin": "^3.3.1",
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.0.0",
    "husky": "^8.0.0",
    "jsdom": "^26.0.0",
    "prettier": "3.5.3",
    "sass-embedded": "^1.85.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.0",
    "vite": "^6.2.0",
    "vite-plugin-svgr": "^4.3.0",
    "vitest": "^3.0.7",
    "vitest-when": "^0.6.0"
  },
  "peerDependencies": {
    "bootstrap": "^5.3.3",
    "dayjs": "^1.11.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.12.0",
    "react-router-dom": "^6.27.0",
    "uuid": "^10.0.0"
  }
}
