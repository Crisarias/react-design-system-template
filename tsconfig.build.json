{
    "compilerOptions": {
      "declaration": true,
      "target": "ES2021",
      "lib": ["ES2021", "DOM", "DOM.Iterable"],
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true,
      "jsx": "react-jsx",
      "module": "ESNext",
      "outDir": "dist",
      "moduleResolution": "bundler",
      "emitDeclarationOnly": true,
      "rootDir": "src",
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true
    },
    "include": [
      "src/**/*",
      "dist/index.d.ts" // declaration file path
    ]
  }